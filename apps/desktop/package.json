{
  "name": "kids-art-desktop",
  "private": true,
  "version": "0.1.0",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev:vite": "cd renderer && vite",
    "dev:electron": "cross-env VITE_DEV_URL=http://localhost:5173 electron electron/main.js",
    "dev": "concurrently -k -n VITE,ELECTRON \"npm:dev:vite\" \"npm:dev:electron\"",
    "build:renderer": "cd renderer && vite build",
    "build": "npm run build:renderer"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "pixi.js": "^8.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  }
}
